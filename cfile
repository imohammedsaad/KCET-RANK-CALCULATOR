/*KCET RANK CALCULATOR*/
#include<stdio.h>
int main(){
    float physics,chemistry,maths;
     printf("\n");
    printf("--------KCET RANK CALCULATOR-------- \n");
     printf("\n");
    printf("Enter your physics marks in boards: ");
    scanf("%f" ,&physics);
     printf("\n");
    printf("Enter your chemistry marks in boards: ");
    scanf("%f" ,&chemistry);
     printf("\n");
    printf("Enter your mathematics marks in boards: ");
    scanf("%f" ,&maths);
     printf("\n");
    float b_w = physics/3 + chemistry/3 + maths/3;
    printf("---> Your boards percentage is %f \n" ,b_w);
     printf("\n");

 float physics_KCET,chemistry_KCET,maths_KCET;
    printf("Enter your physics marks in KCET: ");
    scanf("%f" ,&physics_KCET);
     printf("\n");
    printf("Enter your chemistry marks in KCET: ");
    scanf("%f" ,&chemistry_KCET);
     printf("\n");
    printf("Enter your mathematics marks in KCET: ");
    scanf("%f" ,&maths_KCET);
     printf("\n");
    
 float k_w = physics_KCET*100/180 + chemistry_KCET*100/180 + maths_KCET*100/180;
    printf("--> Your KCET percentage is %f \n" ,k_w); 
     printf("\n");
      printf("\n");
    printf("Boards percentage considered for ranking = %f \n" ,b_w/2);
    printf("KCET percentage considered for ranking = %f \n" ,k_w/2);
    printf("\n");
     printf("\n");
    float final = b_w/2 + k_w/2;
    printf("---> YOUR FINALL KCET PERCENTAGE IS = %f \n" ,final);
    printf("\n");
    printf("-------------CONGRATULATIONS----------------\n");
   printf("\n");
 return 0;

}
